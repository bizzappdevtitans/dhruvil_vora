<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<!-- course code started-->
<record id="action_scrap_desktop" model="ir.actions.act_window">
   <field name="name">Desktop</field>
   <field name="type">ir.actions.act_window</field>
   <field name="res_model">scrap.desktop</field>
   <field name="view_mode">kanban,tree,form</field>
   <field name="help" type="html">
       <p class="o_view_nocontent_smiling_face">
           Add a desktop value
       </p>
   </field>
</record>


<record id="scrap_desktop_kanban" model="ir.ui.view">
            <field name="name">scrap.desktop.kanban</field>
            <field name="model">scrap.desktop</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="desktop_value_name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                 <field name="desktop_value_image" widget="image" />
                                </div>
                                    <field name="desktop_value_name"/>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <record id="scrap_desktop_form" model="ir.ui.view">
    <field name="name">scrap.desktop.form</field>
    <field name="model">scrap.desktop</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="desktop_value_name"/>
                        <field name="desktop_value_image"/>
                    </group>

                </group>
            </sheet>
        </form>
    </field>
 </record>

 <record id="scrap_desktop_tree" model="ir.ui.view">
   <field name="name">scrap.desktop.tree</field>
   <field name="model">scrap.desktop</field>
   <field name="arch" type="xml">
       <tree>
           <field name="desktop_value_name"/>
           <field name="desktop_value_image"/>
       </tree>
   </field>
</record>
</data>

</odoo>


