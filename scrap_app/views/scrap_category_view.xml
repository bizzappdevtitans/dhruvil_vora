<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<record id="action_scrap_category" model="ir.actions.act_window">
   <field name="name">Scrap Category</field>
   <field name="type">ir.actions.act_window</field>
   <field name="res_model">scrap.category</field>
   <field name="view_mode">tree,kanban,form</field>
   <field name="help" type="html">
       <p class="o_view_nocontent_smiling_face">
           Add a scrap category
       </p>
   </field>
</record>



<record id="action_scrap_category_kanban" model="ir.ui.view">
            <field name="name">scrap.category.kanban</field>
            <field name="model">scrap.category</field>

            <field name="arch" type="xml">
            <kanban class="ScrapInventory" string="Scrap Inventory" >
            <field name="scrap_category_sequence" widget="handle" invisible="1" />
              <templates style="width:50%; height:100px;">
                  <t t-name="kanban-box" >
                      <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                          <div class="o_kanban_content">
                            <div style="width:auto; height:auto">
                                 <!-- <field name="scrap_category_image" widget="image"/> -->
                                </div>
                              <strong>
                                  <h4>
                                       <field name="scrap_category_name"/>
                                  </h4>
                              </strong>
                               <div>
                                  Price :
                                  <field name="scrap_category_price"/>
                              </div>

                          </div>
                      </div>
                  </t>
              </templates>
          </kanban>
            </field>
        </record>


    <record id="action_scrap_category_form" model="ir.ui.view">
    <field name="name">scrap.category.form</field>
    <field name="name">scrap.category.search(scrap_app)
    </field>
    <field name="model">scrap.category</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="scrap_category_name"/>
                        <field name="scrap_category_price"/>
                       <field name="scrap_category_image" widget="image"/>
                    </group>

                </group>
            </sheet>
        </form>
    </field>
 </record>

 <record id="action_scrap_category_tree" model="ir.ui.view">
   <field name="name">scrap.category.tree</field>
   <field name="model">scrap.category</field>
   <field name="arch" type="xml">
       <tree>
        <field name="scrap_category_name"/>
        <field name="scrap_category_price"/>

       </tree>
   </field>
</record>
</data>

</odoo>
