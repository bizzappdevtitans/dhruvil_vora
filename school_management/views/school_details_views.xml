<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<!-- school management desktop started-->

<record id="action_school_desktop" model="ir.actions.act_window">
 <field name="name">School Desktop</field>
   <field name="type">ir.actions.act_window</field>
   <field name="res_model">teacher.detail</field>
   <field name="view_mode">tree,form</field>
   <field name="help" type="html">
       <p class="o_view_nocontent_smiling_face">
           Desktop of school management
       </p>
   </field>
</record>
<!-- school management desktop ended-->

<!-- teacher code started -->

<record id="action_school_teacher" model="ir.actions.act_window">
   <field name="name">Teacher</field>
   <field name="type">ir.actions.act_window</field>
   <field name="res_model">school.teacher</field>
   <!--<field name="view_mode">tree,form</field>-->
   <field name="help" type="html">
       <p class="o_view_nocontent_smiling_face">
           Add new Teacher data
       </p>
   </field>
</record>

<record id="action_update_value" model="ir.actions.server">
    <field name="name">Delete 2</field>
    <field name="type">ir.actions.server</field>
    <field name="model_id" ref="model_school_teacher"/>
    <field name="binding_model_id" ref="model_school_teacher"/>
    <field name="state">code</field>
    <field name="code">
         action = records.action_delete_2()
    </field>
</record>

    <record id="Teacher_form" model="ir.ui.view">
    <field name="name">Teacher_form</field>
    <field name="model">school.teacher</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <div class="oe_button_box" name="button_box">

                    <button  type="object" class="oe_stat_button" string="Subjects" name="smart_button"
                    icon="fa-pencil-square-o">
                      <field name="course_count" class="oe_stat_button"/> </button>
            </div>
                <group>
                    <group>
                        <field name="teacher_name"/>
                        <field name="teacher_age"/>
                        <field name="teacher_email"/>
                        <field name="teacher_address"/>
                        <field name="experience"/>
                        <field name="is_married"/>
                        <field name="gender"/>
                        <field name="teacher_record_updated"/>

                          <button name="demo_button" string="Submit button" class="oe_highlight" type="object"/>
                        <!-- action button to student model  <button name="%(school_management.action_school_student)d" string="Action to student data" type="action"
                            class="oe_highlight"/>-->
                    </group>
                </group>
            </sheet>
        </form>
    </field>
 </record>

 <record id="Teacher_tree" model="ir.ui.view">
   <field name="name">Teacher_tree</field>
   <field name="model">school.teacher</field>
   <field name="arch" type="xml">
       <tree>
           <field name="teacher_name"/>
           <field name="teacher_age"/>
           <field name="teacher_address"/>
         <!--  <field name="teacher_subject"/>-->
       </tree>
   </field>
</record>
<!-- teacher code ended -->

<!-- student code started -->
<record id="action_school_student" model="ir.actions.act_window">
   <field name="name">Student</field>
   <field name="type">ir.actions.act_window</field>
   <field name="res_model">school.student</field>
   <field name="view_mode">tree,form</field>
   <field name="help" type="html">
       <p class="o_view_nocontent_smiling_face">
           Add a new data of Student
       </p>
   </field>
</record>


    <record id="Student_form" model="ir.ui.view">
    <field name="name">Student_form</field>
    <field name="model">school.student</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="student_name"/>
                        <field name="student_age"/>
                        <field name="student_email"/>
                        <field name="student_address"/>
                        <field name="gender"/>
                    </group>

                </group>
            </sheet>
        </form>
    </field>
 </record>

 <record id="Student_tree" model="ir.ui.view">
   <field name="name">Student_tree</field>
   <field name="model">school.student</field>
   <field name="arch" type="xml">
       <tree>
           <field name="student_name"/>
           <field name="student_age"/>
           <field name="gender"/>
           <field name="student_email"/>
       </tree>
   </field>
</record>


<!-- student code ended -->

<!-- course code started-->
<record id="action_school_course" model="ir.actions.act_window">
   <field name="name">Course</field>
   <field name="type">ir.actions.act_window</field>
   <field name="res_model">school.course</field>
   <field name="view_mode">tree,form</field>
   <field name="help" type="html">
       <p class="o_view_nocontent_smiling_face">
           Add a new data of Course
       </p>
   </field>
</record>


    <record id="action_school_course_form" model="ir.ui.view">
    <field name="name">School.course.form</field>
    <field name="model">school.course</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="course_name"/>
                        <field name="course_upload_date"/>
                        <field name="first_name"/>
                          <field name="teacher_id"/>
                        <field name="description"/>
                    </group>

                </group>
            </sheet>
        </form>
    </field>
 </record>

 <record id="action_school_course_tree" model="ir.ui.view">
   <field name="name">School.course.form</field>
   <field name="model">school.course</field>
   <field name="arch" type="xml">
       <tree>
           <field name="course_name"/>
            <field name="course_upload_date"/>
            <field name="first_name"/>
            <field name="description"/>
       </tree>
   </field>
</record>
<!-- course code ended -->
    <menuitem
        id="school_menu"
        name="School Management"
        action="action_school_desktop"
        />
    <menuitem
        id="school_menu_teacher"
        name="Teacher"
        action="action_school_teacher"
        parent="school_menu"
        />
 <menuitem
        id="school_menu_student"
        name="Student"
        action="action_school_student"
        parent="school_menu"
        />

         <menuitem
            id="school_menu_course"
            name="Course"
             parent="school_menu"
             action="action_school_course" />
</data>

</odoo>


